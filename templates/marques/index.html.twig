{% extends 'base.html.twig' %}

{% block title %}Liste des marques!{% endblock %}

{% block body %}





<div class="row">
    <div class="col-12">


        <div class=" btn btn ">
            <div style="float: left;">
                <a href="{{ path('marque_create')}}" class="btn btn-primary" style="width:300px;">
                    Ajouter une nouvelle marque
                </a>
            </div>
        </div>
        <div class="card">
            <h5 class="card-header">Liste des marques</h5>


            <div class="table-responsive text-nowrap">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>LibelleVoiture</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody class="table-border-bottom-0">

                        {% for marque in marques %}
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{ marque.id
                                    }}</strong></td>
                            <td>{{ marque.libelle }}</td>

                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>


                                    <div class="dropdown-menu">




                                        <a class="dropdown-item" href="{{ path('marque_edit', { id: marque.id }) }}"><i
                                                class="bx bx-edit-alt me-1"></i>Edit</a>


                                        <a class="dropdown-item"
                                            href="{{ path('marque_delete', { id: marque.id }) }}"><i
                                                class="bx bx-trash me-1"></i>
                                            Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




{% endblock %}